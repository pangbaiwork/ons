apply plugin: 'com.android.library'

buildscript {
    repositories {
        jcenter()
        google()
    }
    dependencies {
        classpath 'com.android.tools.build:gradle:3.4.0'

        classpath 'com.android.tools.build:gradle:3.3.2'
    }
}

android {
    compileSdkVersion 28
    buildToolsVersion "28.0.0"
    defaultConfig {
        minSdkVersion 14
        targetSdkVersion 28
        versionCode 1
        versionName "1.0"

        externalNativeBuild {
            cmake {
              
            
              // 选择C编译的标记，选一个即可
              cFlags "-D_EXAMPLE_C_FLAG2"
			
                arguments "-DANDROID_ARM_NEON=TRUE" ,"-DANDROID_ARM_NEON=TRUE", "-DANDROID_TOOLCHAIN=clang"
			
                cppFlags "-D__STDC_FORMAT_MACROS"
		
            }
            ndk {
                abiFilters 'arm64-v8a', 'armeabi-v7a'
            }
        }
    }
    
    buildTypes {
        release {
            minifyEnabled true
        }
    }
    externalNativeBuild {
        cmake {
            path "CMakeLists.txt"
        }
    }
    
}

dependencies {
	

	 compile 'androidx.appcompat:appcompat:1.0.2'
    

    compile fileTree(dir: 'libs', include: ['*.jar'])
}
